<odoo>
    <record id="action_hospital_category_diseases" model="ir.actions.act_window">
        <field name="name">Categories Diseases</field>
        <field name="res_model">hospital.category.diseases</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_hospital_category_diseases_form" model="ir.ui.view">
        <field name="name">hospital.category.diseases.form</field>
        <field name="model">hospital.category.diseases</field>
        <field name="arch" type="xml">
            <form string="Category">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Subcategories">
                            <field name="child_ids">
                                <tree string="Subcategories">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_category_diseases_tree" model="ir.ui.view">
        <field name="name">hospital.category.diseases.tree</field>
        <field name="model">hospital.category.diseases</field>
        <field name="arch" type="xml">
            <tree string="Categories">
                <field name="name"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>
</odoo>
