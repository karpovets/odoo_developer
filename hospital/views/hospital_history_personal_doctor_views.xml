<odoo>
    <record id="hospital_history_personal_doctor_action" model="ir.actions.act_window">
        <field name="name">Hospital History Personal Doctor</field>
        <field name="res_model">hospital.history.personal.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="hospital_history_personal_doctor_view_tree" model="ir.ui.view">
        <field name="name">hospital history personal doctor tree</field>
        <field name="model">hospital.history.personal.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient"/>
                <field name="doctor"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="hospital_history_personal_doctor_view_form" model="ir.ui.view">
        <field name="name">hospital history personal doctor form</field>
        <field name="model">hospital.history.personal.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="patient"/>
                            <field name="doctor"/>
                            <field name="date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>