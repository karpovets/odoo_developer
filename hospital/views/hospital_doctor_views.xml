<odoo>
    <record id="hospital_doctor_action" model="ir.actions.act_window">
        <field name="name">Hospital Doctor</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="hospital_doctor_view_tree" model="ir.ui.view">
        <field name="name">hospital doctor tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="photo"/>
                <field name="gender"/>
                <field name="full_name"/>
                <field name="specialty"/>
                <field name="intern"/>
                <field name="doctor_mentor"/>
            </tree>
        </field>
    </record>

    <record id="hospital_doctor_view_form" model="ir.ui.view">
        <field name="name">hospital doctor form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="photo"/>
                            <field name="gender"/>
                            <field name="specialty"/>
                            <field name="intern"/>
                            <field name="doctor_mentor" invisible="intern == False" required="intern == True"/>
                            <field name="full_name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>