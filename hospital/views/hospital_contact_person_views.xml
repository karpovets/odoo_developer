<odoo>
    <record id="hospital_contact_person_action" model="ir.actions.act_window">
        <field name="name">Hospital Contact Person</field>
        <field name="res_model">hospital.contact.person</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="hospital_contact_person_view_tree" model="ir.ui.view">
        <field name="name">hospital contact person tree</field>
        <field name="model">hospital.contact.person</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="photo"/>
                <field name="gender"/>
                <field name="full_name"/>
            </tree>
        </field>
    </record>

    <record id="hospital_contact_person_view_form" model="ir.ui.view">
        <field name="name">hospital contact person form</field>
        <field name="model">hospital.contact.person</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="photo"/>
                            <field name="gender"/>
                            <field name="full_name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>